<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MVVM_CRUD.Views.AddEmpleadoPage"
             xmlns:viewModels="clr-namespace:MVVM_CRUD.ViewModels"
             x:DataType="viewModels:AddEmpleadoPageViewModel"
             Title="Empleado Form">
    <VerticalStackLayout Padding="10,0,10,0" VerticalOptions="StartAndExpand" HorizontalOptions="FillAndExpand">
        <Entry Text="{Binding Nombre}" Placeholder="Ingrese el nombre" />
        <Entry Text="{Binding Email}" Placeholder="Ingrese el correo electrónico" />
        <Entry Text="{Binding Direccion}" Placeholder="Ingrese la dirección" />
        <Button Text="Guardar" x:Name="btnGuardarEditar" Command="{Binding AddUpdateCommand}" />
    </VerticalStackLayout>
</ContentPage>